{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hyper Clicker",
  "mainBinaryName": "Hyper Clicker",
  "version": "2.0.0",
  "identifier": "Hyper-Clicker",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Hyper Clicker",
        "width": 495,
        "height": 395,
        "visible": false,
        "resizable": false,
        "maximizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
